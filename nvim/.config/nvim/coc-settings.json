{
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": ["--max-line-length=99"],
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": ["--max-line-length=99"],
    "python.formatting.blackArgs":["--line-length", "99"],
    "python.sortImports.path": "isort",
    "texlab.forwardSearch.executable": "zathura",
    "texlab.forwardSearch.args": ["--synctex-forward", "%l:1:%f", "%p"],
    "texlab.build.onSave": true
}
