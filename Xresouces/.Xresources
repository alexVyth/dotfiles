! fonts
URxvt.font: xft:Source\ Code\ Pro:regular:size=11,xft:Source\ Code\ Pro\ Medium:size=11
URxvt.boldFont: xft:Source\ Code\ Pro:bold:size=11,xft:Source\ Code\ Pro\ Medium:size=11
URxvt.italicFont: xft:Source\ Code\ Pro\ Medium:italic:size=11,xft:Source\ Code\ Pro\ Medium:size=11

! spacing
URxvt.internalBorder: 0
URxvt.lineSpace: 0
URxvt.letterSpace: 0

! colors
URxvt.depth: 32

! extensions
URxvt.perl-ext-common: default,clipboard,url-select,resize-font

! resize-font
URxvt.keysym.C-Down:  resize-font:smaller
URxvt.keysym.C-Up:    resize-font:bigger

! url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true

! clipboard
URxvt.clipboard.autocopy: true
URxvt.keysym.M-c:	perl:clipboard:copy
URxvt.keysym.M-p:	perl:clipboard:paste

! scrollbuffer
URxvt.scrollTtyOutput: false
URxvt.scrollWithBuffer: true
URxvt.scrollTtyKeypress: true
URxvt.scrollBar: false
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0
URxvt.saveLines: 2000

! word by word movement
URxvt.keysym.Control-Left:    \033[1;5D
URxvt.keysym.Control-Right:    \033[1;5C

! disable ctrl-shift
URxvt.iso14755_52: false
URxvt.iso14755: false

! navigation
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007

! hard contrast: *background: #1d2021
*background: #282828
! soft contrast: *background: #32302f
*foreground: #ebdbb2
! Black + DarkGrey
*color0:  #282828
*color8:  #928374
! DarkRed + Red
*color1:  #cc241d
*color9:  #fb4934
! DarkGreen + Green
*color2:  #98971a
*color10: #b8bb26
! DarkYellow + Yellow
*color3:  #d79921
*color11: #fabd2f
! DarkBlue + Blue
*color4:  #458588
*color12: #83a598
! DarkMagenta + Magenta
*color5:  #b16286
*color13: #d3869b
! DarkCyan + Cyan
*color6:  #689d6a
*color14: #8ec07c
! LightGrey + White
*color7:  #a89984
*color15: #ebdbb2
